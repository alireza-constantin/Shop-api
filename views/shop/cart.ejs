<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(product.length > 0){ %>
                <ul>
                    <% product.forEach(prod => { %>
                        <li>
                            <p><%= prod.title %> (<%= prod.cartItem.quantity %>)</p>
                            <form action="/delete-cart-item" method="POST">
                                <button type="submit" class="btn" >Delete Item</button>
                                <input type="hidden" value="<%= prod.id %>" name="productId">
                            </form>
                        </li>
                    <% }); %>
                </ul>   
            <% } else { %>
                <h1>No item in cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>