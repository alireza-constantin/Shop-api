    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(product.length > 0){ %>
                <ul>
                    <% product.forEach(prod => { %>
                        <li><%= prod.productData.title %> (<%= prod.qty %>)</li>
                    <% }); %>
                    <li>Total Price: <%= product[0].totalPrice %></li>
                </ul>   
            <% } else { %>
                <h1>No item in cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>