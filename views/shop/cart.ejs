<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>  

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centerd">
            <% if(product.length > 0){ %>
                <ul class="list">
                    <% product.forEach(prod => { %>
                        <li class="list-item">
                            <p class="items"><%= prod.productId.title %></p><p class="items num"><%= prod.quantity %></p>
                            <form action="/delete-cart-item" method="POST" class="items">
                                <button type="submit" class="btn" id="delete-btn" ><i class="fa fa-close"></i></button>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" value="<%= prod.productId.id %>" name="productId">
                            </form>
                        </li>
                    <% }); %>
                </ul>
                <div class="centered">
                    <!--<form action="/create-order" method="POST">
                        <button type="submit" class="btn" id="order-btn">Order Now!</button>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>-->
                    <a href="/checkout" class="btn">Order Now</a>
                </div>   
            <% } else { %>
                <h1>No item in cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>