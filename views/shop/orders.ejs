<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/order.css">
<link rel="stylesheet" href="/css/cart.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li class="list-items">
                            <div class="flex">
                                <h1>Order- # <%= order.id %> - <a href="orders/<%= order.id %>">invoices</a></h1>
                                <form action="/delete-order-item" method="POST" class="delete-form">
                                    <button type="submit" class="btn" id="delete-btn" ><i class="fa fa-close"></i></button>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" value="<%= order.id %>" name="orderId">
                                </form>
                            </div>
                            <ul>
                                <% order.products.forEach(product => { %>
                                    <li class="items"><%= product.product.title %> (<%= product.quantity %>) </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>